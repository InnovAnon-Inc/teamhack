init_ca () {
(( ! $# ))

D1=(certs crl csr)
D2=(private)

install -m 0770 -d "${D1[@]}"
install -m 0700 -d "${D2[@]}"

[[ -f     crl/number ]] ||
echo                  00 >     crl/number
[[ -f private/serial ]] ||
openssl rand -hex     12 > private/serial
[[ -f private/randfile ]] ||
openssl rand -base64 100 > private/randfile
}

crl () {
(( $# == 1 ))
[[ "$1" ]]
touch          "crl/${1}.index.txt"

openssl ca                      \
  -config  "private/${1}.ini"   \
  -gencrl                       \
  -keyfile "private/${1}.key"   \
  -cert      "certs/${1}.crt"   \
  -out         "crl/${1}.crl"
openssl crl                     \
  -in          "crl/${1}.crl"   \
  -noout                        \
  -text
}

root_ca () {
[[ -f      private/root_ca.ini ]] ||
CA_BITS="$CA_BITS"                \
CA_MD="$CA_MD"                    \
envsubst                          \
<          private/root_ca.ini.in |
tee        private/root_ca.ini

[[ -f        certs/root_ca.crt ]] &&
[[ -f      private/root_ca.key ]] ||
openssl req                         \
  -x509                             \
  -config  private/root_ca.ini      \
  -new                              \
  -newkey     "rsa:${CA_BITS}"      \
  "-${CA_MD}"                       \
  -nodes                            \
  -keyout  private/root_ca.key      \
  -out       certs/root_ca.crt
check_key      root_ca
check_key_pair root_ca
show_cert      root_ca
crl            root_ca
}

req () {
(( $# == 2 ))
[[ "$1" ]]
[[ "$2" == private ]] ||
[[ "$2" == csr ]]
[[ -f         "csr/${1}.csr" ]] &&
[[ -f     "private/${1}.key" ]] ||
openssl req                         \
  -config    "${2}/${1}.ini"        \
  -new                              \
  -newkey     "rsa:${CA_BITS}"      \
  "-${CA_MD}"                       \
  -nodes                            \
  -keyout  "private/${1}.key"       \
  -out         "csr/${1}.csr"
check_key       "${1}"
}

crt () {
(( $# == 2 ))
[[ "$1" ]]
[[ "$2" == private ]] ||
[[ "$2" == csr ]]
[[ -f       "certs/${1}.crt" ]] ||
openssl ca                          \
  -batch                            \
  -notext                           \
  -config    "${2}/${1}.ini"        \
  -in         "csr/${1}.csr"        \
  -out      "certs/${1}.crt"
check_key_pair  "${1}"
}

key_chain () {
(( $# ))
[[ "$1" ]]
local F="$1"
shift

[[ -f     "private/${F}.chain.key" ]] ||
cat                                 \
             certs/root_ca.crt      \
    $(printf certs/%s.crt $@)       \
          "private/${F}.key"        |
tee       "private/${F}.chain.key"
check_key_chain   "${F}.chain"
}

cert_chain () {
(( $# ))
[[ "$1" ]]
local F="$1"
shift

[[ -f      "certs/${F}.chain.crt" ]] ||
cat                                 \
            certs/root_ca.crt       \
   $(printf certs/%s.crt $@)        \
           "certs/${F}.crt"         |
tee        "certs/${F}.chain.crt"
check_cert_chain "${F}.chain"
}


intermediate_ca () {
(( $# == 1 ))
[[ "$1" ]]

[[ -f     "private/${1}-0.ini" ]] ||
CA_BITS="$CA_BITS"                     \
CA_MD="$CA_MD"                         \
CA_DATABASE=./crl/root_ca.index.txt    \
CA_CERTIFICATE=./certs/root_ca.crt     \
CA_KEY=./private/root_ca.key           \
CA_OU="${1}"                           \
CA_crlDistributionPoints=URI:https://InnovAnon-Inc.chickenkiller.com/root_ca.crl \
envsubst                               \
<          private/intermediate.ini.in |
tee       "private/${1}-0.ini"
ln -fsv           "${1}-0.ini" "private/${1}.ini"

req        "${1}" private
key_chain  "${1}"
crt        "${1}" private
cert_chain "${1}"
show_cert  "${1}"

[[ -f     "private/${1}-1.ini" ]] ||
CA_BITS="$CA_BITS"                     \
CA_MD="$CA_MD"                         \
CA_DATABASE="./crl/${1}.index.txt"     \
CA_CERTIFICATE="./certs/${1}.crt"      \
CA_KEY="./private/${1}.key"            \
CA_OU="${1}"                           \
CA_crlDistributionPoints=URI:https://InnovAnon-Inc.chickenkiller.com/root_ca.crl \
envsubst                               \
<          private/intermediate.ini.in |
tee       "private/${1}-1.ini"
ln -fsv           "${1}-1.ini" "private/${1}.ini"

crl        "${1}"
}

site () {
(( $# == 2 ))
[[ "$1" ]]
[[ "$2" ]]

[[ -f         "csr/${2}.ini" ]] ||
CA_BITS="$CA_BITS"                     \
CA_MD="$CA_MD"                         \
CA_DATABASE="./crl/${1}.index.txt"     \
CA_CERTIFICATE="./certs/${1}.crt"      \
CA_KEY="./private/${1}.key"            \
CA_OU="${1}"                           \
CA_crlDistributionPoints="URI:https://InnovAnon-Inc.chickenkiller.com/${1}.crl" \
envsubst                               \
<              csr/site.ini.in         |
tee           "csr/${2}.ini"

req        "${2}" csr
key_chain  "${2}" "${1}"
crt        "${2}" csr
cert_chain "${2}" "${1}"
show_cert  "${2}"
}

revoke () {
(( $# == 2 ))
[[ "$1" ]]
[[ "$2" ]]

openssl ca                          \
  -config "private/${1}.ini"        \
  -revoke   "certs/${2}.crt"
}

nuke () {
echo no longer supported 1>&2
exit 1
find .                 \
  -mindepth 1          \
  \(                   \
  \! -iname '*.ini.in' \
  \! -iname '*.env'    \
  \! -iname '*.sh'     \
  \! -iname private    \
  \! -iname csr        \
  \! -iname lib        \
  \! -iname src        \
  \) -exec             \
  rm -frv -- '{}' +
}

lock () {
(( $# == 2 ))
[[ "$1" ]]
[[ "$2" == private ]] ||
[[ "$2" == csr ]]
local F=(
#    "${2}/${1}.ini"
#    "${2}/${1}-1.ini"
  "private/${1}.key"
  "private/${1}.chain.key"
    "certs/${1}.crt"
    "certs/${1}.chain.crt"
)
[[ ! -f "${2}/${1}.ini" ]] ||
[[ ! -s "${2}/${1}.ini" ]] ||
F+=(    "${2}/${1}.ini" )
[[ ! -f "${2}/${1}-1.ini" ]] ||
F+=(    "${2}/${1}-1.ini" )
#chattr -V -i "${F[@]}"
chmod  -v -w "${F[@]}"
#chattr -V +i "${F[@]}"
}

